---
const { blogs, API_BASE_URL } = Astro.props;
---

<div class="carousel rounded-box w-full pb-10">
  {blogs.length > 0 ? (
    blogs.map((blog: any) => (
      <div class="carousel-item w-full lg:justify-center">
          <article class="relative isolate flex flex-col gap-x-8 gap-y-2 lg:flex-row">
          <div class="relative aspect-video sm:aspect-[2/1] lg:aspect-square xl:w-lg lg:shrink-0">
            <img src={`${API_BASE_URL}${blog?.thumbnail?.formats?.small?.url}`}
            alt={blog?.thumbnail?.formats?.medium?.name} 
            class="absolute inset-0 size-full rounded-2xl bg-gray-50 object-cover">
            <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
          </div>
          <div class="lg:pl-20 ">
            <div class="group relative max-w-xl">
              <h3 class="mt-3 text-lg lg:text-3xl font-semibold text-gray-900 group-hover:text-gray-600">
                  <span class="absolute inset-0"></span>
                  {blog?.title} 
              </h3>
              <p class="mt-5 text-sm lg:text-xl text-gray-600">{blog?.description} </p>
            </div>
            <div class="flex">
              <div class="relative mt-8 flex items-center gap-x-4">
                <div class="text-sm lg:text-base">
                  <p class="font-semibold text-blue-400 hover:text-blue-500">
                    <a href="#"><span class="absolute inset-0" />Read more</a>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </article>
      </div>

    ))
  ) : (
    <></>
  )}
  <div class="absolute bottom-5 left-1/2 transform -translate-x-1/2 flex space-x-2">
    <template>
      <button
        class="w-3 h-3 rounded-full bg-gray-400"
      ></button>
    </template>
  </div>
</div>

