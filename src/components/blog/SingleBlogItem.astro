---
import { marked } from "marked";

const { blog } = Astro.props;
const { featuredImage, title, content } = blog;
const url = import.meta.env.STRAPI_API;
const postImage = featuredImage || null;

---

<div class="bg-white px-6 md:px-20 lg:px-32">
    <div class="mx-auto max-w-5xl text-base/7 text-gray-700">
        <div class="rounded-md h-full w-full overflow-hidden">
            <img
                class={`${
                    postImage ? 'w-3xl md:w-2xl lg:min-w-160' : 'w-64'
                } object-cover justify-self-center rounded-md `}
                src={postImage ? url + postImage.formats.small.url : '/no-photo.png'}
            />
        </div>
      <h1 class="mt-10 mb-5 text-pretty text-2xl font-semibold tracking-tight text-gray-900 pt-5">{title}</h1>
      <div class="rich-text" set:html={marked.parse(content)}  /> 
    </div>
  </div>