---
import Footer from "../components/footer.astro";
import Header from "../components/header.astro";
import "../styles/global.css";
import '@fontsource/noto-sans-thai';

const API_BASE_URL = "http://localhost:1337"; // Change if deployed
const res = await fetch(
  `${API_BASE_URL}/api/hotels/w12z6l3u4cknzds9qngk9jj1?populate=*`
);
const { data: hotels } = await res.json();

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{hotels.name}</title>
	</head>
	<body class="grid min-h-screen grid-rows-[auto_1fr_auto]">
		<Header hotels={hotels} />
		<slot />
		<Footer hotels={hotels} />
	</body>
</html>

<style>
	html {
		font-family: 'IBM Plex Sans Thai', sans-serif;
	}
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

</style>
